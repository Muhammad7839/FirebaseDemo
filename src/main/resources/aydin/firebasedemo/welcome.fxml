<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aydin.firebasedemo.WelcomeController"
      alignment="CENTER"
      spacing="15.0"
      prefWidth="400.0"
      prefHeight="300.0">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="Welcome to Firebase Demo" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button fx:id="registerButton" text="Register" onAction="#onRegisterClicked"/>
                <Button fx:id="signInButton" text="Sign In" onAction="#onSignInClicked"/>
            </children>
        </HBox>
        <Label fx:id="messageLabel" textFill="red"/>
    </children>
</VBox>